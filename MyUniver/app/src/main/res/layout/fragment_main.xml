<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.asus.drawerapp.Fragments.fragment_main">

    <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="587dp"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="8dp">

    <TextView
        android:id="@+id/headerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="Введите Ваше имя"
        android:textAlignment="center"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="229dp"
        tools:layout_editor_absoluteY="-346dp" />

    <EditText
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headerText"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="236dp"
        tools:layout_editor_absoluteY="-531dp" />

    <TextView
        android:id="@+id/textPlan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameText"
        android:layout_centerHorizontal="true"
        android:text="Ваши планы на завтра?"
        android:textAlignment="center"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="94dp"
        tools:layout_editor_absoluteY="73dp" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:gravity="center"
        android:layout_below="@+id/textPlan"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioGroup"
            android:layout_weight="1"
            android:text="Пойти в универ"
            android:textAlignment="center"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/radioButton1"
            android:layout_below="@+id/radioButton3"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="Пойти в другое место"
            android:textAlignment="center"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/radioButton2"
            android:layout_below="@+id/radioButton1"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="Остаться дома"
            android:textAlignment="center"
            android:textSize="20sp" />

    </RadioGroup>

    <LinearLayout
        android:id="@+id/llMain"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:layout_below="@+id/radioGroup"
        android:layout_alignParentStart="true">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llMain2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:layout_below="@+id/llMain"
        android:layout_alignParentStart="true">
        <EditText
            android:id="@+id/edittextWhere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headerText"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:visibility="invisible"
            android:inputType="textPersonName"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="236dp"
            tools:layout_editor_absoluteY="-531dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llMain3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:layout_below="@+id/llMain2"
        android:layout_alignParentStart="true">
    </LinearLayout>

        <at.markushi.ui.CircleButton
            android:id="@+id/btnadd"
            android:layout_width="80dip"
            android:layout_height="80dip"
            app:cb_color="#ff4640"
            android:src="@drawable/ic_done2"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            app:cb_pressedRingWidth="8dip" />

    </RelativeLayout>

</RelativeLayout>